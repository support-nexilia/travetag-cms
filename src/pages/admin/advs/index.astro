---
import MainLayout from '@/layouts/MainLayout.astro';
import { getAllAdvs } from '@/data/adv';
import { formatDate } from '@/utils';
import { Pencil } from 'lucide-react';
import { DeleteButton } from '@/components/ui/DeleteButton';
import { StatusBadge } from '@/components/StatusBadge';

const advs = await getAllAdvs(true); // Include anche non pubblicati per admin
---

<MainLayout title="Advertising">
  <div class="p-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-800">Advertising</h1>
      <a
        href="/admin/advs/new"
        class="px-4 py-2 bg-[#FF6B35] text-white rounded-lg hover:bg-[#ff8555] transition-colors"
      >
        Nuovo Advertising
      </a>
    </div>

    <div class="bg-white/80 backdrop-blur-md rounded-xl shadow-lg border border-white/20 overflow-hidden">
      <table class="w-full">
        <thead class="bg-gray-50/50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Titolo</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo/Posizione</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stato</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stats</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Azioni</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          {advs.map((adv) => (
            <tr class="hover:bg-gray-50/50 transition-colors">
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900">{adv.title}</div>
                {adv.subtitle && (
                  <div class="text-xs text-gray-500">{adv.subtitle}</div>
                )}
                {adv.link && (
                  <a 
                    href={adv.link} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="text-xs text-[#FF6B35] hover:underline block truncate max-w-xs"
                  >
                    {adv.link}
                  </a>
                )}
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900">{adv.type || '-'}</div>
                <div class="text-xs text-gray-500">{adv.position || '-'}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <StatusBadge published={adv.published} />
                {adv.priority !== undefined && (
                  <div class="text-xs text-gray-500 mt-1">Priorit√†: {adv.priority}</div>
                )}
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">üëÅÔ∏è {adv.impressions || 0}</div>
                <div class="text-sm text-gray-500">üñ±Ô∏è {adv.clicks || 0}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                {adv.start_date && (
                  <div class="text-xs text-gray-500">Inizio: {formatDate(adv.start_date)}</div>
                )}
                {adv.end_date && (
                  <div class="text-xs text-gray-500">Fine: {formatDate(adv.end_date)}</div>
                )}
                {!adv.start_date && !adv.end_date && (
                  <div class="text-xs text-gray-500">-</div>
                )}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex gap-2 justify-end">
                  <a
                    href={`/advs/edit/${adv._id}`}
                    class="inline-flex items-center gap-1 px-3 py-1.5 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors text-sm"
                  >
                    <Pencil className="w-4 h-4" />
                    Modifica
                  </a>
                  <DeleteButton client:load id={adv._id!} entityType="adv" entityName={adv.title} />
                </div>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</MainLayout>
