---
import MainLayout from '@/layouts/MainLayout.astro';
import { getAdvById } from '@/data/adv';
import { getCurrentUser, isAdmin } from '@/lib/auth';
import { toISODateTimeLocal } from '@/utils';
import { FormFeedback } from '@/components/FormFeedback';



const { id } = Astro.params;
if (!id) return Astro.redirect('/admin/advs');

const adv = await getAdvById(id);
if (!adv) return Astro.redirect('/admin/advs');

const user = await getCurrentUser();
const userIsAdmin = await isAdmin();
---

<MainLayout title={`Modifica ${adv.title}`}>
  <div class="p-8">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Modifica Advertising</h1>
      
      <form id="advForm" class="bg-white/80 backdrop-blur-md rounded-xl p-6 shadow-lg border border-white/20">
        <input type="hidden" id="advId" value={adv.id} />
        <input type="hidden" id="currentUserId" value={user?.id} />
        <input type="hidden" id="isAdmin" value={userIsAdmin ? 'true' : 'false'} />
        
        <div class="mb-4">
          <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
            Titolo *
          </label>
          <input
            type="text"
            id="title"
            name="title"
            value={adv.title}
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          />
        </div>

        <div class="mb-4">
          <label for="subtitle" class="block text-sm font-medium text-gray-700 mb-2">
            Sottotitolo
          </label>
          <input
            type="text"
            id="subtitle"
            name="subtitle"
            value={adv.subtitle || ''}
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          />
        </div>

        <div class="mb-4">
          <label for="link" class="block text-sm font-medium text-gray-700 mb-2">
            Link
          </label>
          <input
            type="url"
            id="link"
            name="link"
            value={adv.link || ''}
            placeholder="https://example.com"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          />
        </div>

        <div class="grid grid-cols-2 gap-4 mb-4">
          <div>
            <label for="date" class="block text-sm font-medium text-gray-700 mb-2">
              Data *
            </label>
            <input
              type="datetime-local"
              id="date"
              name="date"
              value={toISODateTimeLocal(adv.date)}
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            />
          </div>

          <div>
            <label for="status" class="block text-sm font-medium text-gray-700 mb-2">
              Status *
            </label>
            <select
              id="status"
              name="status"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            >
              <option value="DRAFT" selected={adv.status === 'DRAFT'}>DRAFT</option>
              <option value="PUBLISHED" selected={adv.status === 'PUBLISHED'}>PUBLISHED</option>
              <option value="PLANNED" selected={adv.status === 'PLANNED'}>PLANNED</option>
              <option value="DELETED" selected={adv.status === 'DELETED'}>DELETED</option>
            </select>
          </div>
        </div>

        {userIsAdmin && (
          <div class="mb-6">
            <label for="userId" class="block text-sm font-medium text-gray-700 mb-2">
              Autore (solo admin)
            </label>
            <input
              type="text"
              id="userId"
              name="userId"
              value={adv.userId}
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            />
          </div>
        )}

        <div class="flex gap-3">
          <button
            type="submit"
            class="flex-1 px-4 py-2 bg-[#FF6B35] text-white rounded-lg hover:bg-[#ff8555] transition-colors"
          >
            Salva Modifiche
          </button>
          <a
            href="/admin/advs"
            class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition-colors"
          >
            Annulla
          </a>
        </div>
      </form>
    </div>
  </div>

  <FormFeedback client:only="react" isLoading={false} success={null} error={null} />

  <script>
    const form = document.getElementById('advForm') as HTMLFormElement;
    const advId = (document.getElementById('advId') as HTMLInputElement).value;
    const isAdmin = (document.getElementById('isAdmin') as HTMLInputElement).value === 'true';
    let isLoading = false;
    
    function updateFeedback(props: any) {
      const event = new CustomEvent('formFeedback', { detail: props });
      window.dispatchEvent(event);
    }
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      if (isLoading) return;
      isLoading = true;
      updateFeedback({ isLoading: true, success: null, error: null });
      
      const formData = new FormData(form);
      const data: any = {
        title: formData.get('title') as string,
        subtitle: formData.get('subtitle') as string || undefined,
        link: formData.get('link') as string || undefined,
        date: new Date(formData.get('date') as string).toISOString(),
        status: formData.get('status') as string,
      };
      
      // Only admin can change userId
      if (isAdmin && formData.get('userId')) {
        data.userId = formData.get('userId') as string;
      }
      
      try {
        const response = await fetch(`/admin/api/advs/${advId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });
        
        isLoading = false;
        
        if (response.ok) {
          updateFeedback({ 
            isLoading: false, 
            success: { 
              show: true, 
              message: 'Advertising aggiornato con successo!'
            }, 
            error: null 
          });
        } else {
          const error = await response.json();
          updateFeedback({ 
            isLoading: false, 
            success: null, 
            error: { 
              show: true, 
              message: error.message || 'Errore durante l\'aggiornamento'
            }
          });
        }
      } catch (error) {
        console.error(error);
        isLoading = false;
        updateFeedback({ 
          isLoading: false, 
          success: null, 
          error: { 
            show: true, 
            message: 'Errore durante l\'aggiornamento dell\'advertising'
          }
        });
      }
    });
  </script>
</MainLayout>
