---
import MainLayout from '@/layouts/MainLayout.astro';
import { getAllArticles } from '@/data/article';
import { getAuthorById } from '@/data/author';
import { Pencil } from 'lucide-react';
import { DeleteButton } from '@/components/ui/DeleteButton';
import { Badge } from '@/components/ui/badge';
import { isAdmin } from '@/lib/session';

// Get session from locals (set by middleware)
const session = Astro.locals.session;

// Filter by namespace for non-admin users
const namespace = isAdmin(session) ? undefined : session.namespace;
const articles = await getAllArticles(namespace);

// Get authors for each article
const articlesWithAuthors = await Promise.all(
  articles.map(async (article) => {
    const author = await getAuthorById(article.author_id.toString());
    return { ...article, author };
  })
);
---

<MainLayout title="Articoli">
  <div class="p-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-800">Articoli</h1>
      <a
        href="/admin/articles/new"
        class="px-4 py-2 bg-[#FF6B35] text-white rounded-lg hover:bg-[#ff8555] transition-colors"
      >
        Nuovo Articolo
      </a>
    </div>

    <div class="bg-white/80 backdrop-blur-md rounded-xl shadow-lg border border-white/20 overflow-hidden">
      <table class="w-full">
        <thead class="bg-gray-50/50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Titolo</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Autore</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stato</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Azioni</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          {articlesWithAuthors.map((article) => (
            <tr class="hover:bg-gray-50/50 transition-colors">
              <td class="px-6 py-4">
                <div class="flex items-center gap-3">
                  {article.image && (
                    <img 
                      src={article.image} 
                      alt={article.title} 
                      class="w-16 h-16 rounded-lg object-cover"
                    />
                  )}
                  <div>
                    <div class="text-sm font-medium text-gray-900">{article.title}</div>
                    {article.subtitle && (
                      <div class="text-xs text-gray-500">{article.subtitle}</div>
                    )}
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-600">{article.author?.name || 'N/A'}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <Badge className={article.type === 'BOOK_NOW' ? 'bg-green-500 text-white' : 'bg-purple-500 text-white'}>
                  {article.type === 'BOOK_NOW' ? 'Prenota' : 'Ricorda'}
                </Badge>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <Badge className={article.status === 'PUBLISHED' ? 'bg-blue-500 text-white' : 'bg-gray-400 text-white'}>
                  {article.status === 'PUBLISHED' ? 'Pubblicato' : 'Bozza'}
                </Badge>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-600">
                  {new Date(article.published_date).toLocaleDateString('it-IT')}
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex gap-2 justify-end">
                  <a
                    href={`/admin/articles/edit/${article._id.toString()}`}
                    class="inline-flex items-center gap-1 px-3 py-1.5 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors text-sm"
                  >
                    <Pencil className="w-4 h-4" />
                    Modifica
                  </a>
                  <DeleteButton
                    client:load
                    itemId={article._id.toString()}
                    itemName={article.title}
                    deleteUrl={`/api/articles/${article._id.toString()}`}
                    redirectUrl="/articles"
                  />
                </div>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    {articles.length === 0 && (
      <div class="text-center py-12 text-gray-500">
        Nessun articolo trovato. <a href="/admin/articles/new" class="text-[#FF6B35] hover:underline">Crea il primo articolo</a>
      </div>
    )}
  </div>
</MainLayout>
