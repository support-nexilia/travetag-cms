---
import MainLayout from '@/layouts/MainLayout.astro';
import ComponentShowcase from '@/components/demo/ComponentShowcase';
import { IS_PROD } from '@/lib/env';

// Solo in dev mode
if (IS_PROD) {
  return Astro.redirect('/admin');
}
---

<MainLayout title="Demo - Component Library">
  <div class="max-w-7xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Component Library</h1>
      <p class="text-gray-600 mt-2">Preview di tutti i componenti disponibili (solo dev mode)</p>
    </div>
    
    <ComponentShowcase client:load />
  </div>
</MainLayout>
