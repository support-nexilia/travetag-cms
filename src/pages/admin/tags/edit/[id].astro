---
import MainLayout from '@/layouts/MainLayout.astro';
import { getTagById } from '@/data/tag';
import { FormFeedback } from '@/components/FormFeedback';



const { id } = Astro.params;
if (!id) return Astro.redirect('/admin/tags');

const tag = await getTagById(id);
if (!tag) return Astro.redirect('/admin/tags');
---

<MainLayout title={`Modifica ${tag.name}`}>
  <div class="p-8">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Modifica Tag</h1>
      
      <form id="tagForm" class="bg-white/80 backdrop-blur-md rounded-xl p-6 shadow-lg border border-white/20">
        <input type="hidden" id="tagId" value={tag._id.toString()} />
        
        <div class="mb-4">
          <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
            Nome *
          </label>
          <input
            type="text"
            id="name"
            name="name"
            value={tag.name}
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          />
        </div>

        <div class="mb-4">
          <label for="slug" class="block text-sm font-medium text-gray-700 mb-2">
            Slug
          </label>
          <input
            type="text"
            id="slug"
            name="slug"
            value={tag.slug}
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          />
          <p class="text-xs text-gray-500 mt-1">Lascia vuoto per generarlo automaticamente dal nome</p>
        </div>

        <div class="mb-6">
          <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
            Descrizione
          </label>
          <textarea
            id="description"
            name="description"
            rows="4"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          >{tag.description}</textarea>
        </div>

        <div class="flex gap-3">
          <button
            type="submit"
            class="flex-1 px-4 py-2 bg-[#FF6B35] text-white rounded-lg hover:bg-[#ff8555] transition-colors"
          >
            Salva Modifiche
          </button>
          <a
            href="/admin/tags"
            class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition-colors"
          >
            Annulla
          </a>
        </div>
      </form>
    </div>
  </div>

  <FormFeedback client:only="react" isLoading={false} success={null} error={null} />

  <script is:inline>
    const form = document.getElementById('tagForm');
    const tagId = document.getElementById('tagId').value;
    const nameInput = document.getElementById('name');
    const slugInput = document.getElementById('slug');
    let isLoading = false;
    
    function updateFeedback(props) {
      const event = new CustomEvent('formFeedback', { detail: props });
      window.dispatchEvent(event);
    }
    
    // Auto-generate slug from name
    nameInput.addEventListener('input', () => {
      const slug = nameInput.value
        .toLowerCase()
        .trim()
        .replace(/\s+/g, '-')
        .replace(/[^\w\-]+/g, '')
        .replace(/\-\-+/g, '-');
      slugInput.value = slug;
    });
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const slugValue = formData.get('slug') as string;
      const nameValue = formData.get('name') as string;
      const data = {
        name: nameValue,
        slug: slugValue || nameValue,
        description: formData.get('description') as string || undefined,
      };
      
      try {
        const response = await fetch(`/admin/api/tags/${tagId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });
        
        if (response.ok) {
          updateFeedback({ 
            isLoading: false, 
            success: { 
              show: true, 
              message: 'Tag aggiornato con successo!'
            }, 
            error: null 
          });
        } else {
          const error = await response.json();
          updateFeedback({ 
            isLoading: false, 
            success: null, 
            error: { 
              show: true, 
              message: error.message || 'Errore durante l\'aggiornamento'
            }
          });
        }
      } catch (error) {
        console.error(error);
        updateFeedback({ 
          isLoading: false, 
          success: null, 
          error: { 
            show: true, 
            message: 'Errore durante l\'aggiornamento del tag'
          }
        });
      }
    });
  </script>
</MainLayout>
