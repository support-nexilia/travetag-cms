---
import MainLayout from '@/layouts/MainLayout.astro';
import { getCurrentUser } from '@/lib/auth';
import { getAllAuthors } from '@/data/author';
import { FormFeedback } from '@/components/FormFeedback';

const user = await getCurrentUser();
const authors = await getAllAuthors();
---

<MainLayout title="Nuovo Advertising">
  <div class="p-8">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Nuovo Advertising</h1>
      
      <form id="advForm" class="bg-white/80 backdrop-blur-md rounded-xl p-6 shadow-lg border border-white/20">
        <input type="hidden" id="currentUserId" value={user?.id} />
        
        <div class="grid grid-cols-1 gap-4 mb-4">
          <div>
            <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
              Titolo *
            </label>
            <input
              type="text"
              id="title"
              name="title"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            />
          </div>

          <div>
            <label for="subtitle" class="block text-sm font-medium text-gray-700 mb-2">
              Sottotitolo
            </label>
            <input
              type="text"
              id="subtitle"
              name="subtitle"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            />
          </div>

          <div>
            <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
              Descrizione
            </label>
            <textarea
              id="description"
              name="description"
              rows="3"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            ></textarea>
          </div>

          <div>
            <label for="image" class="block text-sm font-medium text-gray-700 mb-2">
              URL Immagine
            </label>
            <input
              type="url"
              id="image"
              name="image"
              placeholder="https://example.com/image.jpg"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            />
          </div>

          <div>
            <label for="link" class="block text-sm font-medium text-gray-700 mb-2">
              Link Destinazione
            </label>
            <input
              type="url"
              id="link"
              name="link"
              placeholder="https://example.com"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            />
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4 mb-4">
          <div>
            <label for="type" class="block text-sm font-medium text-gray-700 mb-2">
              Tipo
            </label>
            <select
              id="type"
              name="type"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            >
              <option value="">Seleziona tipo...</option>
              <option value="banner">Banner</option>
              <option value="popup">Popup</option>
              <option value="sidebar">Sidebar</option>
              <option value="newsletter">Newsletter</option>
            </select>
          </div>

          <div>
            <label for="position" class="block text-sm font-medium text-gray-700 mb-2">
              Posizione
            </label>
            <select
              id="position"
              name="position"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            >
              <option value="">Seleziona posizione...</option>
              <option value="home">Home</option>
              <option value="article">Article</option>
              <option value="category">Category</option>
              <option value="tag">Tag</option>
              <option value="search">Search</option>
            </select>
          </div>

          <div>
            <label for="priority" class="block text-sm font-medium text-gray-700 mb-2">
              Priorit√† (0-10)
            </label>
            <input
              type="number"
              id="priority"
              name="priority"
              min="0"
              max="10"
              value="5"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            />
          </div>

          <div>
            <label for="author_id" class="block text-sm font-medium text-gray-700 mb-2">
              Autore *
            </label>
            <select
              id="author_id"
              name="author_id"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            >
              {authors.map((author) => (
                <option value={author._id}>{author.name}</option>
              ))}
            </select>
          </div>
        </div>

        <div class="grid grid-cols-3 gap-4 mb-4">
          <div>
            <label for="start_date" class="block text-sm font-medium text-gray-700 mb-2">
              Data Inizio
            </label>
            <input
              type="datetime-local"
              id="start_date"
              name="start_date"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            />
          </div>

          <div>
            <label for="end_date" class="block text-sm font-medium text-gray-700 mb-2">
              Data Fine
            </label>
            <input
              type="datetime-local"
              id="end_date"
              name="end_date"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            />
          </div>

          <div>
            <label for="published_date" class="block text-sm font-medium text-gray-700 mb-2">
              Data Pubblicazione
            </label>
            <input
              type="datetime-local"
              id="published_date"
              name="published_date"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            />
          </div>
        </div>

        <div class="mb-6">
          <label class="flex items-center gap-2">
            <input
              type="checkbox"
              id="published"
              name="published"
              class="w-4 h-4 text-[#FF6B35] focus:ring-[#FF6B35] border-gray-300 rounded"
            />
            <span class="text-sm font-medium text-gray-700">Pubblicato</span>
          </label>
        </div>

        <div class="flex gap-3">
          <button
            type="submit"
            class="flex-1 px-4 py-2 bg-[#FF6B35] text-white rounded-lg hover:bg-[#ff8555] transition-colors"
          >
            Crea Advertising
          </button>
          <a
            href="/advs"
            class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition-colors"
          >
            Annulla
          </a>
        </div>
      </form>
    </div>
  </div>

  <FormFeedback client:only="react" isLoading={false} success={null} error={null} />

  <script>
    const form = document.getElementById('advForm') as HTMLFormElement;
    let isLoading = false;
    
    function updateFeedback(props: any) {
      const event = new CustomEvent('formFeedback', { detail: props });
      window.dispatchEvent(event);
    }
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      if (isLoading) return;
      isLoading = true;
      updateFeedback({ isLoading: true, success: null, error: null });
      
      const formData = new FormData(form);
      const data: any = {
        title: formData.get('title') as string,
        author_id: formData.get('author_id') as string,
        published: formData.get('published') === 'on',
      };

      // Optional fields
      if (formData.get('subtitle')) data.subtitle = formData.get('subtitle');
      if (formData.get('description')) data.description = formData.get('description');
      if (formData.get('image')) data.image = formData.get('image');
      if (formData.get('link')) data.link = formData.get('link');
      if (formData.get('type')) data.type = formData.get('type');
      if (formData.get('position')) data.position = formData.get('position');
      if (formData.get('priority')) data.priority = parseInt(formData.get('priority') as string);
      if (formData.get('start_date')) data.start_date = new Date(formData.get('start_date') as string).toISOString();
      if (formData.get('end_date')) data.end_date = new Date(formData.get('end_date') as string).toISOString();
      if (formData.get('published_date')) data.published_date = new Date(formData.get('published_date') as string).toISOString();
      
      try {
        const response = await fetch('/api/advs', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });
        
        isLoading = false;
        
        if (response.ok) {
          const result = await response.json();
          updateFeedback({ 
            isLoading: false, 
            success: { 
              show: true, 
              message: 'Advertising creato con successo!'
            }, 
            error: null 
          });
          // Redirect to edit page
          setTimeout(() => {
            window.location.href = `/advs/edit/${result.id}`;
          }, 1000);
        } else {
          const error = await response.json();
          updateFeedback({ 
            isLoading: false, 
            success: null, 
            error: { 
              show: true, 
              message: error.message || 'Errore durante la creazione'
            }
          });
        }
      } catch (error) {
        console.error(error);
        isLoading = false;
        updateFeedback({ 
          isLoading: false, 
          success: null, 
          error: { 
            show: true, 
            message: 'Errore durante la creazione dell\'advertising'
          }
        });
      }
    });
  </script>
</MainLayout>
