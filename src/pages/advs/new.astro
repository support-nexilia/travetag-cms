---
import MainLayout from '@/layouts/MainLayout.astro';
import { getCurrentUser } from '@/lib/auth';

const user = await getCurrentUser();
---

<MainLayout title="Nuovo Advertising">
  <div class="p-8">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Nuovo Advertising</h1>
      
      <form id="advForm" class="bg-white/80 backdrop-blur-md rounded-xl p-6 shadow-lg border border-white/20">
        <input type="hidden" id="userId" value={user?.id} />
        
        <div class="mb-4">
          <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
            Titolo *
          </label>
          <input
            type="text"
            id="title"
            name="title"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          />
        </div>

        <div class="mb-4">
          <label for="subtitle" class="block text-sm font-medium text-gray-700 mb-2">
            Sottotitolo
          </label>
          <input
            type="text"
            id="subtitle"
            name="subtitle"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          />
        </div>

        <div class="mb-4">
          <label for="link" class="block text-sm font-medium text-gray-700 mb-2">
            Link
          </label>
          <input
            type="url"
            id="link"
            name="link"
            placeholder="https://example.com"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          />
        </div>

        <div class="grid grid-cols-2 gap-4 mb-6">
          <div>
            <label for="date" class="block text-sm font-medium text-gray-700 mb-2">
              Data *
            </label>
            <input
              type="datetime-local"
              id="date"
              name="date"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            />
          </div>

          <div>
            <label for="status" class="block text-sm font-medium text-gray-700 mb-2">
              Status *
            </label>
            <select
              id="status"
              name="status"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            >
              <option value="DRAFT">DRAFT</option>
              <option value="PUBLISHED">PUBLISHED</option>
              <option value="PLANNED">PLANNED</option>
            </select>
          </div>
        </div>

        <div class="flex gap-3">
          <button
            type="submit"
            class="flex-1 px-4 py-2 bg-[#FF6B35] text-white rounded-lg hover:bg-[#ff8555] transition-colors"
          >
            Crea Advertising
          </button>
          <a
            href="/advs"
            class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition-colors"
          >
            Annulla
          </a>
        </div>
      </form>
    </div>
  </div>

  <script>
    const form = document.getElementById('advForm') as HTMLFormElement;
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const data = {
        title: formData.get('title') as string,
        subtitle: formData.get('subtitle') as string || undefined,
        link: formData.get('link') as string || undefined,
        date: new Date(formData.get('date') as string).toISOString(),
        status: formData.get('status') as string,
        userId: (document.getElementById('userId') as HTMLInputElement).value,
      };
      
      try {
        const response = await fetch('/api/advs', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });
        
        if (response.ok) {
          window.location.href = '/advs';
        } else {
          const error = await response.json();
          alert('Errore durante la creazione dell\'advertising: ' + (error.message || 'Errore sconosciuto'));
        }
      } catch (error) {
        console.error(error);
        alert('Errore durante la creazione dell\'advertising');
      }
    });
    
    // Set default date to now
    const dateInput = document.getElementById('date') as HTMLInputElement;
    const now = new Date();
    const offset = now.getTimezoneOffset();
    const adjusted = new Date(now.getTime() - offset * 60 * 1000);
    dateInput.value = adjusted.toISOString().slice(0, 16);
  </script>
</MainLayout>
