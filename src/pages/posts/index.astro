---
import MainLayout from '@/layouts/MainLayout.astro';
import { getAllPosts } from '@/data/post';
import { formatDate } from '@/utils';
import { Pencil } from 'lucide-react';
import { DeleteButton } from '@/components/ui/DeleteButton';

const posts = await getAllPosts();
---

<MainLayout title="Post">
  <div class="p-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-800">Post</h1>
      <a
        href="/posts/new"
        class="px-4 py-2 bg-[#FF6B35] text-white rounded-lg hover:bg-[#ff8555] transition-colors"
      >
        Nuovo Post
      </a>
    </div>

    <div class="bg-white/80 backdrop-blur-md rounded-xl shadow-lg border border-white/20 overflow-hidden">
      <table class="w-full">
        <thead class="bg-gray-50/50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Titolo</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Autore</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Azioni</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          {posts.map((post) => (
            <tr class="hover:bg-gray-50/50 transition-colors">
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900">{post.title}</div>
                {post.description && (
                  <div class="text-sm text-gray-500 mt-1">{post.description}</div>
                )}
                <div class="flex flex-wrap gap-1 mt-2">
                  {post.categories.map((c: any) => (
                    <span class="text-xs bg-purple-100 text-purple-700 px-2 py-1 rounded">
                      {c.category.name}
                    </span>
                  ))}
                  {post.tags.map((t: any) => (
                    <span class="text-xs bg-indigo-100 text-indigo-700 px-2 py-1 rounded">
                      {t.tag.name}
                    </span>
                  ))}
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class={`text-xs px-2 py-1 rounded ${
                  post.status === 'PUBLISHED' ? 'bg-green-100 text-green-700' :
                  post.status === 'DRAFT' ? 'bg-gray-100 text-gray-700' :
                  post.status === 'PLANNED' ? 'bg-blue-100 text-blue-700' :
                  post.status === 'REVISION' ? 'bg-yellow-100 text-yellow-700' :
                  'bg-red-100 text-red-700'
                }`}>
                  {post.status}
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">{formatDate(post.date)}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">{post.user.username}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex gap-2 justify-end">
                  <a
                    href={`/posts/edit/${post.id}`}
                    class="inline-flex items-center gap-1 px-3 py-1.5 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors text-sm"
                  >
                    <Pencil className="w-4 h-4" />
                    Modifica
                  </a>
                  {post.status !== 'DELETED' && (
                    <DeleteButton client:load id={post.id} entityType="post" entityName={post.title} />
                  )}
                </div>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</MainLayout>
