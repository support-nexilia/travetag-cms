---
import MainLayout from '@/layouts/MainLayout.astro';
import { getAllCategories } from '@/data/category';
import { getAllTags } from '@/data/tag';
import { getAllUsers } from '@/data/user';
import { getCurrentUser, isAdmin } from '@/lib/auth';

const categories = await getAllCategories();
const tags = await getAllTags();
const user = await getCurrentUser();
---

<MainLayout title="Nuovo Post">
  <div class="p-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Nuovo Post</h1>
      
      <form id="postForm" class="bg-white/80 backdrop-blur-md rounded-xl p-6 shadow-lg border border-white/20">
        <input type="hidden" id="userId" value={user?.id} />
        
        <div class="mb-4">
          <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
            Titolo *
          </label>
          <input
            type="text"
            id="title"
            name="title"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          />
        </div>

        <div class="mb-4">
          <label for="slug" class="block text-sm font-medium text-gray-700 mb-2">
            Slug
          </label>
          <input
            type="text"
            id="slug"
            name="slug"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          />
          <p class="text-xs text-gray-500 mt-1">Lascia vuoto per generarlo automaticamente dal titolo</p>
        </div>

        <div class="mb-4">
          <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
            Descrizione
          </label>
          <textarea
            id="description"
            name="description"
            rows="2"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          ></textarea>
        </div>

        <div class="mb-4">
          <label for="content" class="block text-sm font-medium text-gray-700 mb-2">
            Contenuto
          </label>
          <textarea
            id="content"
            name="content"
            rows="10"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          ></textarea>
        </div>

        <div class="grid grid-cols-2 gap-4 mb-4">
          <div>
            <label for="date" class="block text-sm font-medium text-gray-700 mb-2">
              Data *
            </label>
            <input
              type="datetime-local"
              id="date"
              name="date"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            />
          </div>

          <div>
            <label for="status" class="block text-sm font-medium text-gray-700 mb-2">
              Status *
            </label>
            <select
              id="status"
              name="status"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            >
              <option value="DRAFT">DRAFT</option>
              <option value="PUBLISHED">PUBLISHED</option>
              <option value="PLANNED">PLANNED</option>
            </select>
          </div>
        </div>

        {userIsAdmin && (
          <div class="mb-4">
            <label for="userId" class="block text-sm font-medium text-gray-700 mb-2">
              Autore (solo admin)
            </label>
            <select
              id="userId"
              name="userId"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            >
              {users.map((u) => (
                <option value={u.id} selected={user?.id === u.id}>
                  {u.username} ({u.email})
                </option>
              ))}
            </select>
          </div>
        )}

        <div class="grid grid-cols-2 gap-4 mb-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Categorie
            </label>
            <div class="space-y-2 max-h-40 overflow-y-auto border border-gray-300 rounded-lg p-3">
              {categories.map((category) => (
                <label class="flex items-center gap-2">
                  <input
                    type="checkbox"
                    name="categories"
                    value={category.id}
                    class="rounded border-gray-300 text-[#FF6B35] focus:ring-[#FF6B35]"
                  />
                  <span class="text-sm">{category.name}</span>
                </label>
              ))}
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Tag
            </label>
            <div class="space-y-2 max-h-40 overflow-y-auto border border-gray-300 rounded-lg p-3">
              {tags.map((tag) => (
                <label class="flex items-center gap-2">
                  <input
                    type="checkbox"
                    name="tags"
                    value={tag.id}
                    class="rounded border-gray-300 text-[#FF6B35] focus:ring-[#FF6B35]"
                  />
                  <span class="text-sm">{tag.name}</span>
                </label>
              ))}
            </div>
          </div>
        </div>

        <div class="flex gap-3">
          <button
            type="submit"
            class="flex-1 px-4 py-2 bg-[#FF6B35] text-white rounded-lg hover:bg-[#ff8555] transition-colors"
          >
            Crea Post
          </button>
          <a
            href="/posts"
            class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition-colors"
          >
            Annulla
          </a>
        </div>
      </form>
    </div>
  </div>

  <script>
    const form = document.getElementById('postForm') as HTMLFormElement;
    const titleInput = document.getElementById('title') as HTMLInputElement;
    const slugInput = document.getElementById('slug') as HTMLInputElement;
    
    // Auto-generate slug from title
    titleInput.addEventListener('input', () => {
      const slug = titleInput.value
        .toLowerCase()
        .trim()
        .replace(/\s+/g, '-')
        .replace(/[^\w\-]+/g, '')
        .replace(/\-\-+/g, '-');
      slugInput.value = slug;
    });
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const categoryIds = Array.from(formData.getAll('categories'));
      const tagIds = Array.from(formData.getAll('tags'));
      
      const slugValue = formData.get('slug') as string;
      const titleValue = formData.get('title') as string;
      
      const data = {
        title: titleValue,
        slug: slugValue || titleValue,
        description: formData.get('description') as string || undefined,
        content: formData.get('content') as string || undefined,
        date: new Date(formData.get('date') as string).toISOString(),
        status: formData.get('status') as string,
        userId: (document.getElementById('userId') as HTMLInputElement).value,
        categoryIds,
        tagIds,
      };
      
      try {
        const response = await fetch('/api/posts', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });
        
        if (response.ok) {
          window.location.href = '/posts';
        } else {
          const error = await response.json();
          alert('Errore durante la creazione del post: ' + (error.message || 'Errore sconosciuto'));
        }
      } catch (error) {
        console.error(error);
        alert('Errore durante la creazione del post');
      }
    });
    
    // Set default date to now
    const dateInput = document.getElementById('date') as HTMLInputElement;
    const now = new Date();
    const offset = now.getTimezoneOffset();
    const adjusted = new Date(now.getTime() - offset * 60 * 1000);
    dateInput.value = adjusted.toISOString().slice(0, 16);
  </script>
</MainLayout>
