---
import MainLayout from '@/layouts/MainLayout.astro';
import { getPostById } from '@/data/post';
import { getAllCategories } from '@/data/category';
import { getAllTags } from '@/data/tag';
import { getAllUsers } from '@/data/user';
import { getCurrentUser, isAdmin } from '@/lib/auth';
import { toISODateTimeLocal } from '@/utils';



const { id } = Astro.params;
if (!id) return Astro.redirect('/posts');

const post = await getPostById(id);
if (!post) return Astro.redirect('/posts');

const categories = await getAllCategories();
const tags = await getAllTags();
const users = await getAllUsers();
const user = await getCurrentUser();
const userIsAdmin = await isAdmin();

const selectedCategoryIds = post.categories.map((c: any) => c.categoryId);
const selectedTagIds = post.tags.map((t: any) => t.tagId);
---

<MainLayout title={`Modifica ${post.title}`}>
  <div class="p-8">
    <div class="max-w-4xl mx-auto">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Modifica Post</h1>
        {post.revisions && post.revisions.length > 0 && (
          <a
            href={`/posts/${id}/revisions`}
            class="px-4 py-2 bg-purple-500 text-white rounded-lg hover:bg-purple-600 transition-colors text-sm"
          >
            Vedi Revisioni ({post.revisions.length})
          </a>
        )}
      </div>
      
      <form id="postForm" class="bg-white/80 backdrop-blur-md rounded-xl p-6 shadow-lg border border-white/20">
        <input type="hidden" id="postId" value={post.id} />
        <input type="hidden" id="currentUserId" value={user?.id} />
        <input type="hidden" id="isAdmin" value={userIsAdmin ? 'true' : 'false'} />
        
        <div class="mb-4">
          <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
            Titolo *
          </label>
          <input
            type="text"
            id="title"
            name="title"
            value={post.title}
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          />
        </div>

        <div class="mb-4">
          <label for="slug" class="block text-sm font-medium text-gray-700 mb-2">
            Slug
          </label>
          <input
            type="text"
            id="slug"
            name="slug"
            value={post.slug}
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          />
          <p class="text-xs text-gray-500 mt-1">Lascia vuoto per generarlo automaticamente dal titolo</p>
        </div>

        <div class="mb-4">
          <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
            Descrizione
          </label>
          <textarea
            id="description"
            name="description"
            rows="2"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          >{post.description}</textarea>
        </div>

        <div class="mb-4">
          <label for="content" class="block text-sm font-medium text-gray-700 mb-2">
            Contenuto
          </label>
          <textarea
            id="content"
            name="content"
            rows="10"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
          >{post.content}</textarea>
        </div>

        <div class="grid grid-cols-2 gap-4 mb-4">
          <div>
            <label for="date" class="block text-sm font-medium text-gray-700 mb-2">
              Data *
            </label>
            <input
              type="datetime-local"
              id="date"
              name="date"
              value={toISODateTimeLocal(post.date)}
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            />
          </div>

          <div>
            <label for="status" class="block text-sm font-medium text-gray-700 mb-2">
              Status *
            </label>
            <select
              id="status"
              name="status"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            >
              <option value="DRAFT" selected={post.status === 'DRAFT'}>DRAFT</option>
              <option value="PUBLISHED" selected={post.status === 'PUBLISHED'}>PUBLISHED</option>
              <option value="PLANNED" selected={post.status === 'PLANNED'}>PLANNED</option>
              <option value="DELETED" selected={post.status === 'DELETED'}>DELETED</option>
            </select>
          </div>
        </div>

        {userIsAdmin && (
          <div class="mb-4">
            <label for="userId" class="block text-sm font-medium text-gray-700 mb-2">
              Autore (solo admin)
            </label>
            <select
              id="userId"
              name="userId"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6B35]"
            >
              {users.map((u) => (
                <option value={u.id} selected={post.userId === u.id}>
                  {u.username} ({u.email})
                </option>
              ))}
            </select>
          </div>
        )}

        <div class="grid grid-cols-2 gap-4 mb-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Categorie
            </label>
            <div class="space-y-2 max-h-40 overflow-y-auto border border-gray-300 rounded-lg p-3">
              {categories.map((category) => (
                <label class="flex items-center gap-2">
                  <input
                    type="checkbox"
                    name="categories"
                    value={category.id}
                    checked={selectedCategoryIds.includes(category.id)}
                    class="rounded border-gray-300 text-[#FF6B35] focus:ring-[#FF6B35]"
                  />
                  <span class="text-sm">{category.name}</span>
                </label>
              ))}
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Tag
            </label>
            <div class="space-y-2 max-h-40 overflow-y-auto border border-gray-300 rounded-lg p-3">
              {tags.map((tag) => (
                <label class="flex items-center gap-2">
                  <input
                    type="checkbox"
                    name="tags"
                    value={tag.id}
                    checked={selectedTagIds.includes(tag.id)}
                    class="rounded border-gray-300 text-[#FF6B35] focus:ring-[#FF6B35]"
                  />
                  <span class="text-sm">{tag.name}</span>
                </label>
              ))}
            </div>
          </div>
        </div>

        <div class="flex gap-3">
          <button
            type="submit"
            class="flex-1 px-4 py-2 bg-[#FF6B35] text-white rounded-lg hover:bg-[#ff8555] transition-colors"
          >
            Salva Modifiche
          </button>
          <a
            href="/posts"
            class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition-colors"
          >
            Annulla
          </a>
        </div>
      </form>
    </div>
  </div>

  <script>
    const form = document.getElementById('postForm') as HTMLFormElement;
    const postId = (document.getElementById('postId') as HTMLInputElement).value;
    const isAdmin = (document.getElementById('isAdmin') as HTMLInputElement).value === 'true';
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const categoryIds = Array.from(formData.getAll('categories'));
      const tagIds = Array.from(formData.getAll('tags'));
      
      const slugValue = formData.get('slug') as string;
      const titleValue = formData.get('title') as string;
      
      const data: any = {
        title: titleValue,
        slug: slugValue || titleValue,
        description: formData.get('description') as string || undefined,
        content: formData.get('content') as string || undefined,
        date: new Date(formData.get('date') as string).toISOString(),
        status: formData.get('status') as string,
        categoryIds,
        tagIds,
      };
      
      // Only admin can change userId
      if (isAdmin && formData.get('userId')) {
        data.userId = formData.get('userId') as string;
      }
      
      try {
        const response = await fetch(`/api/posts/${postId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });
        
        if (response.ok) {
          window.location.href = '/posts';
        } else {
          const error = await response.json();
          alert('Errore durante l\'aggiornamento del post: ' + (error.message || 'Errore sconosciuto'));
        }
      } catch (error) {
        console.error(error);
        alert('Errore durante l\'aggiornamento del post');
      }
    });
  </script>
</MainLayout>
