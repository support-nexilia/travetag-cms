---
import Header from '@/components/layouts/Header.astro';
import Footer from '@/components/layouts/Footer.astro';
import Menu from '@/components/layouts/Menu.astro';
import '@/styles/global.css';

interface Props {
  title?: string;
}

const { title = 'TravelTag CMS' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);">
    <Header />
    <div class="flex flex-1">
      <Menu currentPath={currentPath} />
      <main class="flex-1 p-8">
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>
