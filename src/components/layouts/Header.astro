---
// Header component
import { getSession } from '@/lib/session';
import { LogOut } from 'lucide-react';

const session = await getSession(Astro.cookies);
const initial = session.name ? session.name.charAt(0).toUpperCase() : 'U';

// Get role label
const roleLabels = {
  admin: 'Admin',
  editor: 'Editor',
  tourleader: 'Tour Leader',
};
const roleLabel = session.role ? roleLabels[session.role] : '';
---

<header class="border-b backdrop-blur-md bg-white/80 shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-6 py-4 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <img src="/logo.png" alt="TravelTag" class="h-10" />
      <h1 class="text-2xl font-bold" style="color: #FF6B35;">TravelTag CMS</h1>
    </div>

    <div class="flex items-center gap-4">
      <div class="text-right">
        <div class="text-sm font-medium text-gray-800">{session.name}</div>
        <div class="text-xs text-gray-500">{roleLabel}{session.namespace ? ` â€¢ ${session.namespace}` : ''}</div>
      </div>
      <div class="w-10 h-10 rounded-full flex items-center justify-center" style="background-color: #FF6B35;">
        <span class="text-sm font-medium text-white">{initial}</span>
      </div>
      <a
        href="/api/auth/logout"
        class="p-2 hover:bg-gray-100 rounded-lg transition-colors"
        title="Logout"
      >
        <LogOut class="w-5 h-5 text-gray-600" />
      </a>
    </div>
  </div>
</header>
