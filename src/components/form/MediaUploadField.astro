---
export interface Props {
  id: string;
  label: string;
  name?: string;
  accept?: string;
  previewUrl?: string;
  previewAlt?: string;
  previewType?: 'image' | 'video';
  helperText?: string;
}

const {
  id,
  label,
  name = id,
  accept,
  previewUrl,
  previewAlt = 'Preview',
  previewType = 'image',
  helperText,
} = Astro.props;
---

<div>
  <span class="block text-sm font-medium text-gray-700 mb-2">{label}</span>
  <input
    type="file"
    id={id}
    name={name}
    accept={accept}
    class="sr-only"
  />
  <input type="hidden" id={`${id}-remove`} name={`${name}_remove`} value="false" />
  <div id={`${id}-picker`}>
    <label
      for={id}
      class="flex items-center justify-between gap-4 rounded-lg border-2 border-dashed border-gray-300 bg-gray-50 px-4 py-3 text-sm text-gray-600 transition hover:border-[#FF6B35] hover:bg-[#FF6B35]/5 cursor-pointer"
    >
      <span class="flex items-center gap-3">
        <span class="inline-flex h-9 w-9 items-center justify-center rounded-md bg-white shadow-sm border border-gray-200">
          <svg viewBox="0 0 24 24" class="h-5 w-5 text-gray-500" aria-hidden="true">
            <path fill="currentColor" d="M12 3l4 4h-3v6h-2V7H8l4-4zm-7 14h14v2H5v-2z"/>
          </svg>
        </span>
        <span>
          <span class="block font-medium text-gray-700" id={`${id}-title`}>Carica un file</span>
          <span class="block text-xs text-gray-500" id={`${id}-subtitle`}>Clicca per selezionare</span>
        </span>
      </span>
      <span
        class="rounded-md bg-white px-3 py-1 text-xs font-medium text-gray-600 border border-gray-200"
        id={`${id}-cta`}
      >
        Scegli file
      </span>
    </label>
    <button
      type="button"
      id={`${id}-clear`}
      class="mt-2 hidden text-xs font-medium text-gray-500 hover:text-gray-700"
    >
      Rimuovi file
    </button>
  </div>
  {previewUrl ? (
    <div class="mt-3" id={`${id}-preview`}>
      {previewType === 'video' ? (
        <a
          href={previewUrl}
          target="_blank"
          rel="noreferrer"
          class="inline-block text-sm text-[#FF6B35] hover:underline"
        >
          Anteprima video
        </a>
      ) : (
        <img src={previewUrl} alt={previewAlt} class="w-20 h-20 rounded-lg object-cover" />
      )}
      <button
        type="button"
        id={`${id}-remove-existing`}
        class="mt-2 block text-xs font-medium text-gray-500 hover:text-gray-700"
      >
        Rimuovi file
      </button>
    </div>
  ) : null}
  {helperText ? <p class="text-xs text-gray-500 mt-2">{helperText}</p> : null}
</div>

<script is:inline define:vars={{ inputId: id, hasPreview: Boolean(previewUrl) }}>
  const input = document.getElementById(inputId);
  const title = document.getElementById(`${inputId}-title`);
  const subtitle = document.getElementById(`${inputId}-subtitle`);
  const cta = document.getElementById(`${inputId}-cta`);
  const clearButton = document.getElementById(`${inputId}-clear`);
  const picker = document.getElementById(`${inputId}-picker`);
  const preview = document.getElementById(`${inputId}-preview`);
  const removeExisting = document.getElementById(`${inputId}-remove-existing`);
  const removeInput = document.getElementById(`${inputId}-remove`);

  if (hasPreview && picker && preview) {
    picker.classList.add('hidden');
  }

  if (input) {
    input.addEventListener('change', () => {
      const file = input.files && input.files[0];
      if (file) {
        title.textContent = file.name;
        subtitle.textContent = `${Math.round(file.size / 1024)} KB`;
        cta.textContent = 'Cambia';
        clearButton.classList.remove('hidden');
        if (removeInput) removeInput.value = 'false';
      } else {
        title.textContent = 'Carica un file';
        subtitle.textContent = 'Clicca per selezionare';
        cta.textContent = 'Scegli file';
        clearButton.classList.add('hidden');
      }
    });
  }

  if (clearButton) {
    clearButton.addEventListener('click', () => {
      input.value = '';
      title.textContent = 'Carica un file';
      subtitle.textContent = 'Clicca per selezionare';
      cta.textContent = 'Scegli file';
      clearButton.classList.add('hidden');
    });
  }

  if (removeExisting && picker && preview) {
    removeExisting.addEventListener('click', () => {
      preview.classList.add('hidden');
      picker.classList.remove('hidden');
      if (removeInput) removeInput.value = 'true';
    });
  }
</script>
